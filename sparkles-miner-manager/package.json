{
  "name": "miner-manager",
  "version": "1.0.0",
  "description": "Miner Manager for UmbrelOS - Manage Bitaxe and Nano3S Bitcoin miners",
  "main": "dist/server.js",
  "scripts": {
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "tsc",
    "build:frontend": "cd frontend && npm install && npm run build",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "tsc --watch",
    "dev:frontend": "cd frontend && npm run dev",
    "start": "node dist/server.js",
    "test": "jest"
  },
  "keywords": [
    "bitcoin",
    "mining",
    "bitaxe",
    "nano3s",
    "umbrel",
    "miner-management"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "axios": "^1.6.0",
    "ws": "^8.14.2",
    "network-interfaces": "^1.2.0",
    "ipaddr.js": "^2.1.0",
    "sqlite3": "^5.1.6",
    "body-parser": "^1.20.2",
    "multer": "^1.4.5-lts.1",
    "form-data": "^4.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.9.0",
    "@types/ws": "^8.5.9",
    "@types/cors": "^2.8.17",
    "@types/multer": "^1.4.11",
    "typescript": "^5.2.2",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.8"
  }
}
